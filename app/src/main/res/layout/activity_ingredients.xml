<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorScreens.IngredientsActivity">

    <Toolbar
        android:id="@+id/tooolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save_ingredients"
        android:layout_below="@+id/tooolbar"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="16dp"
            app:cardCornerRadius="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Calories"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ingredients_textview_calories_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="225/1465"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/breakfast_calories_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    app:indicatorColor="@color/dark_green"
                    app:trackThickness="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="carbs"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/breakfast_carbs_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:progress="45"
                            app:indicatorColor="@color/orange_carbs"
                            app:trackThickness="8dp" />

                        <TextView
                            android:id="@+id/breakfast_textview_carbs_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="49 g / 183 g"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="protein"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/breakfast_proteins_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:progress="20"
                            app:indicatorColor="@color/pink_protein"
                            app:trackThickness="8dp" />

                        <TextView
                            android:id="@+id/breakfast_textview_proteins_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="49 g / 183 g"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fats"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/breakfast_fats_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:progress="65"
                            app:indicatorColor="@color/purple_fats"
                            app:trackThickness="8dp" />

                        <TextView
                            android:id="@+id/breakfast_textview_fats_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="49 g / 183 g"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredient_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@color/white"
        android:background="@drawable/login_reg_btn"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>